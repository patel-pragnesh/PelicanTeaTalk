                    <Grid.RowDefinitions>
                        <RowDefinition Height="240" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackLayout HorizontalOptions="Start"
                                 Grid.Row="0"
                                 Padding="20"
                                 Spacing="0"
                                 VerticalOptions="End">

                        <Label Text="{ Binding Post.title.rendered }"
                               LineBreakMode="WordWrap"
                               MaxLines="2"
                               FontFamily="{StaticResource Montserrat-SemiBold}"
                               TextColor="{ StaticResource OverImageTextColor }"
                               FontAttributes="Bold"
                               FontSize="26" />

                        <BoxView BackgroundColor="{ DynamicResource colPrim }"
                                 Style="{StaticResource BrandNameOrnamentStyle}"
                                 Margin="0,20,0,0" />

                    </StackLayout>

                    <Grid Grid.Row="1"
                          RowSpacing="0"
                          BackgroundColor="{ DynamicResource BasePageColor }">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <BoxView Grid.Row="0"
                                 BackgroundColor="{ DynamicResource ArticleHeaderBackgroundColor }" />

                        <Grid Padding="20,0"
                              VerticalOptions="Center"
                              ColumnSpacing="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="{ Binding Post.CategoryName }"
                                   FontSize="14"
                                   FontFamily="{StaticResource Montserrat-SemiBold}"
                                   TextColor="#49659F"
                                   VerticalTextAlignment="Center" />

                            <Label Grid.Column="1"
                                   Margin="10,0"
                                   Text="{ Binding Post.CreatedDate }"
                                   FontSize="14"
                                   FontFamily="{StaticResource Montserrat-Regular}"
                                   TextColor="{ DynamicResource BlackTextColor }"
                                   VerticalTextAlignment="Center" />

                            <Label Grid.Column="2"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center"
