                                    Margin="0,0,0,-10"
                                    FontFamily="{StaticResource RegularFont_ProductSans}"
                                    FontSize="14"
                                    HeightRequest="30"
                                    Placeholder="Enter voucher code" />
                            </Grid>
                            <Image
                                Grid.Column="1"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="qrcode_scan"
                                VerticalOptions="Center" />
