                                    VerticalOptions="Center" />
                            </Grid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>-->
                    
                </Grid>
            </Grid>
        </pancake:PancakeView>
    </Grid>
</pages:PopupPage>