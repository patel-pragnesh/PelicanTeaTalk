                                                            Spacing="4"
                                                            VerticalOptions="Center">

                                                            <StackLayout Spacing="8">
                                                                <Label
                                                                    HeightRequest="40"
                                                                    LineBreakMode="TailTruncation"
                                                                    LineHeight="0.8"
